/**
 * @fileoverview Firestore Security Rules for Prototyping.
 *
 * Core Philosophy:
 * This ruleset is in prototyping mode. All permissions are explicitly removed.
 *
 * Data Structure:
 * - /guests/{guestId}: Stores guest visit records.
 * - /reservations/{reservationId}: Stores guest reservations.
 * - /tables/{tableId}: Stores restaurant table information.
 * - /waitingGuests/{waitingGuestId}: Stores the waiting list.
 *
 * Key Security Decisions:
 * - No data access is permitted.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures guest visit records.
     * @path /guests/{guestId}
     * @allow None
     * @deny None
     * @principle Explicitly removes all access during prototyping.
     */
    match /guests/{guestId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures guest reservations.
     * @path /reservations/{reservationId}
     * @allow None
     * @deny None
     * @principle Explicitly removes all access during prototyping.
     */
    match /reservations/{reservationId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures restaurant table information.
     * @path /tables/{tableId}
     * @allow None
     * @deny None
     * @principle Explicitly removes all access during prototyping.
     */
    match /tables/{tableId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures the waiting list.
     * @path /waitingGuests/{waitingGuestId}
     * @allow None
     * @deny None
     * @principle Explicitly removes all access during prototyping.
     */
    match /waitingGuests/{waitingGuestId} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}